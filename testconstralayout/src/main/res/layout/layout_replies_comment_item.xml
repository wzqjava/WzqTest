<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/comments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:lineSpacingExtra="0sp"
            android:text="@string/all_replies"
            android:textColor="#353a45"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/highlight_view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/comments_title"
            android:layout_alignBottom="@id/comments_title"
            android:background="#353a45" />
    </RelativeLayout>

    <com.africa.news.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/title_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/like_container"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/comment_container"
        android:layout_alignBottom="@id/comment_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:clipChildren="false"
        android:orientation="vertical"
        android:gravity="center">

        <com.like.LikeButton
            android:id="@+id/like_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:anim_scale_factor="2"
            app:circle_end_color="@color/pink"
            app:circle_start_color="#f9949b"
            app:dots_primary_color="@color/pink"
            app:dots_secondary_color="#f9949b"
            app:icon_size="18dp"
            app:icon_type="heart"
            app:is_enabled="true"
            app:liked="false" />

        <TextView
            android:id="@+id/like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontStyleNormal"
            android:lineSpacingExtra="2sp"
            android:lines="1"
            android:textColor="#353a45"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="163" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/like_container"
        android:layout_toEndOf="@id/avatar"
        android:background="@drawable/shape_comment_bg"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0sp"
            android:textColor="#353a45"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Caleigh Jerde" />

        <TextView
            android:id="@+id/user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4sp"
            android:textColor="#353a45"
            android:textSize="14sp"
            tools:text="Zidane Wants Chelsea Job, But Only On TEESE Three Conditions" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_reply_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_container"
        android:layout_alignStart="@id/comment_container"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontStyleNormal"
            android:lineSpacingExtra="0sp"
            android:textColor="@color/blue_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="1d ago" />

        <TextView
            android:id="@+id/reply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/comment_time"
            style="@style/FontStyleNormal"
            android:lineSpacingExtra="0sp"
            android:text="@string/reply"
            android:textColor="@color/blue_grey"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>

</RelativeLayout>