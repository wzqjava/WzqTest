<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/update_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10sp"
                android:text="@string/tap_to_update"
                android:textColor="@color/blue_grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10sp"
                android:text="@string/clear"
                android:textColor="@color/blue_grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/clear_btn"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10sp"
                android:text="@string/setting"
                android:textColor="@color/blue_grey"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_setting_container"
            android:visibility="gone"
            tools:visibility="visible">

            <com.africa.news.offline.ProgressView
                android:id="@+id/progress_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/progress_tv"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/progress_view"
                android:gravity="center_vertical"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/blue_grey"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_container"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.africa.news.offline.DownloadPanel
            android:id="@+id/download_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

    <com.africa.news.widget.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>