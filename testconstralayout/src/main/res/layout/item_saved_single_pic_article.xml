<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/saved_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:button="@drawable/ic_save_check_toggle"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/right_gap"
        android:layout_toEndOf="@id/saved_check">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@id/pic"
            android:ellipsize="end"
            style="@style/FontStyleMedium"
            android:lineSpacingExtra="4sp"
            android:maxLines="3"
            android:textAlignment="viewStart"
            android:textColor="#1b1e25"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="The three Options Kenya has for 2022 politics Prof.Manyora" />

        <com.africa.news.widget.CircleImageView
            android:id="@+id/pic"
            android:layout_width="108dp"
            android:layout_height="78dp"
            android:layout_alignTop="@id/title"
            android:layout_alignParentEnd="true"
            app:circle_image_type="round" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/source_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:layout_alignStart="@id/title_container"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp">

        <com.africa.news.widget.CircleImageView
            android:id="@+id/logo_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignStart="@id/title"
            android:layout_alignTop="@id/source"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/logo_img"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:textColor="#9ca0ab"
            tools:text="Hivissa" />

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/source"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/source"
            android:textColor="#9ca0ab"
            tools:text="just now" />

        <ImageView
            android:id="@+id/comment_pic"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignTop="@id/source"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/publish_time"
            app:srcCompat="@drawable/ic_comment_icon" />

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/source"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/comment_pic"
            android:textColor="#9ca0ab"
            tools:text="1.1k" />

        <ImageView
            android:id="@+id/not_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pic"
            android:layout_toStartOf="@+id/pic"
            android:tint="#dcdee5"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_white_24dp" />

    </LinearLayout>

    <View
        android:id="@+id/right_gap"
        android:layout_width="16dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/title_container"
        android:layout_toStartOf="@id/anchor" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/source_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:background="#f2f3f5" />

</RelativeLayout>