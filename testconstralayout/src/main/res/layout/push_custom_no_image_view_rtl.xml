<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_notification_logo"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/group_2_copy_4"
        android:layout_width="22dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_toStartOf="@id/iv_notification_logo"
        android:textAlignment="textStart"
        android:layout_toEndOf="@id/tv_notification_time"
        android:layout_marginStart="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="6dp"
        android:layout_alignTop="@id/iv_notification_logo"
        android:layout_alignBottom="@id/iv_notification_logo"
        android:textSize="12sp"
        style="@style/FontStyleNormal"
        android:textStyle="bold"
        android:textColor="@color/dark"
        tools:text="لا توجد بيانات"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/tv_notification_title"
        android:layout_alignBottom="@id/tv_notification_title"
        android:textSize="12sp"
        style="@style/FontStyleNormal"
        android:textStyle="normal"
        android:textColor="@color/blue_grey"
        android:lineSpacingExtra="0sp"
        android:gravity="center"
        tools:text="13:41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_notification_content"
        android:layout_alignEnd="@id/iv_notification_logo"
        android:layout_alignStart="@id/tv_notification_time"
        android:textSize="12sp"
        android:textColor="#1b1e25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_notification_logo"
        android:layout_marginTop="3.5dp"
        android:maxLines="2"
        android:ellipsize="end"/>

</RelativeLayout>