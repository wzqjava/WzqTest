<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/ll_label"
        layout="@layout/layout_follow_label" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="16dp"
        app:layout_goneMarginTop="10dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_label">

        <com.africa.news.widget.CircleImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/news_pic_width"
            android:layout_height="@dimen/news_pic_height"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:circle_image_type="round"
            tools:src="@drawable/ic_default" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/pic"
            android:ellipsize="end"
            style="@style/FontStyleMedium"
            android:lineSpacingExtra="2sp"
            android:maxLines="3"
            android:textColor="#1b1e25"
            android:textSize="16sp"
            tools:text="The three O 20e 20s for 2022  2022 sssssssssssssssssssssssssssssssssssssssssssssss" />

        <android.support.v4.widget.Space
            android:id="@+id/anchor"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_below="@id/title"
            android:layout_alignEnd="@id/title"
            android:layout_alignBottom="@id/pic"
            android:layout_toStartOf="@+id/pic" />

        <ImageView
            android:id="@+id/not_interest"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/anchor"
            android:layout_alignEnd="@id/anchor"
            android:layout_alignBottom="@id/pic"
            android:layout_centerVertical="true"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="-8dp"
            android:layout_toStartOf="@+id/anchor"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:srcCompat="@drawable/close" />

        <RelativeLayout
            android:id="@+id/detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/anchor"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/not_interest">

            <com.africa.news.widget.CircleImageView
                android:id="@+id/logo_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/logo_img"
                android:ellipsize="end"
                style="@style/FontStyleNormal"
                android:maxWidth="@dimen/news_one_pic_name_max_width"
                android:maxLines="1"
                android:textColor="#9ca0ab"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="OperatnOperatnOpratsdadsadadadasdadsada" />

            <TextView
                android:id="@+id/publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/source"
                style="@style/FontStyleNormal"
                android:gravity="end"
                android:lineSpacingExtra="0sp"
                android:textColor="#9ca0ab"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="30min. ago" />

            <ImageView
                android:id="@+id/comment_pic"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/publish_time"
                app:srcCompat="@drawable/ic_comment_icon" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/comment_pic"
                style="@style/FontStyleNormal"
                android:lineSpacingExtra="0sp"
                android:textColor="#9ca0ab"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="123.k" />

        </RelativeLayout>


        <View
            android:id="@+id/base_divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/detail_container"
            android:layout_marginTop="10dp"
            android:background="@color/pale_grey" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>