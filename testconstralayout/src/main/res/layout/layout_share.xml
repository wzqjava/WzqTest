<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="50dp"
    android:paddingBottom="50dp">

    <LinearLayout
        android:id="@+id/like_container"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/selector_like_rect_bg"
        android:gravity="center"
        android:minWidth="84dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_news_like_voted" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0sp"
            android:text="@string/like"
            android:textColor="#ff3a4f"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/like_container"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/img_share_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_facebook" />

        <ImageView
            android:id="@+id/img_share_whatsapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_whatsapp" />

        <ImageView
            android:id="@+id/img_share_twitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_twitter" />

        <ImageView
            android:id="@+id/img_share_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_more" />
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/follow_top_container"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@id/like_container"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f6f7fa" />

        <com.africa.news.widget.CircleImageView
            android:id="@+id/follow_label_top_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_avatar_default" />

        <com.africa.news.widget.FollowButton
            android:id="@+id/top_follow_btn"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/follow_label_top_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@id/top_follow_btn"
            android:layout_toEndOf="@id/follow_label_top_icon"
            android:ellipsize="end"
            style="@style/FontStyleMedium"
            android:gravity="start|center_vertical"
            android:lineSpacingExtra="0sp"
            android:maxLines="1"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="kahsdkahssssss" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#f6f7fa" />
    </RelativeLayout>


</RelativeLayout>