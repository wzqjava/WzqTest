<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/follow_label_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="19dp"
            app:srcCompat="@drawable/ic_back_svg"/>

        <LinearLayout
            android:id="@+id/follow_top_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/follow_label_back"
            android:orientation="horizontal">

            <com.africa.news.widget.CircleImageView
                android:id="@+id/follow_label_top_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_follow_default"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/follow_label_top_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                style="@style/FontStyleMedium"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:maxWidth="90dp"
                android:maxLines="1"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="kahsdkahssssssssssssssssssss" />

            <com.africa.news.widget.FollowButton
                android:id="@+id/top_follow_btn"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                app:isLabel="true"
                android:layout_marginStart="28dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/follow_label_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:srcCompat="@drawable/ic_news_share" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/follow_label_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_container" />

    <com.africa.news.widget.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_container"
        android:background="#ffff"
        android:clickable="true" />

</RelativeLayout>