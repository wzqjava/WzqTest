<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff">

    <com.africa.news.widget.CircleImageView
        android:id="@+id/follow_lable_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_follow_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/follow_label_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        style="@style/FontStyleMedium"
        android:lineSpacingExtra="0sp"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/dark"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/follow_lable_logo"
        app:layout_constraintTop_toTopOf="@id/follow_lable_logo"
        tools:text="kahsdssssssssssssssssskahs" />

    <TextView
        android:id="@+id/follower_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="@style/FontStyleMedium"
        android:lineSpacingExtra="0sp"
        android:textColor="@color/dark"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/follow_label_name"
        app:layout_constraintTop_toBottomOf="@id/follow_label_name"
        tools:text="235" />

    <TextView
        android:id="@+id/followers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        style="@style/FontStyleNormal"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:minHeight="22dp"
        android:text="@string/followers"
        android:textColor="#9ca0ab"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/follower_cnt"
        app:layout_constraintStart_toEndOf="@id/follower_cnt"
        app:layout_constraintTop_toTopOf="@id/follower_cnt" />

    <com.africa.news.widget.FollowButton
        android:id="@+id/follow_btn"
        android:layout_width="160dp"
        android:layout_height="36dp"
        app:isLabel="true"
        android:layout_marginTop="12dp"
        app:drawable_margin="8dp"
        app:layout_constraintStart_toStartOf="@id/follow_label_name"
        app:layout_constraintTop_toBottomOf="@id/follower_cnt"
        app:text_size="12sp" />

    <TextView
        android:id="@+id/follow_label_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        style="@style/FontStyleNormal"
        android:maxLines="3"
        android:textAlignment="viewStart"
        android:textColor="#9ca0ab"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/follow_label_arrow"
        app:layout_constraintStart_toStartOf="@id/follow_label_name"
        app:layout_constraintTop_toBottomOf="@id/follow_btn"
        tools:text="asdsfghjgdffnihdfhfhdsjhsjd\nasdsfghjgdffn\nihdfhfh\ndsjhsjdasdsfghjgdffnihdfh" />

    <ImageView
        android:id="@+id/follow_label_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:src="@drawable/arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/follow_label_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/follow_label_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#f6f7fa"
        app:layout_constraintTop_toBottomOf="@id/follow_label_info" />

</android.support.constraint.ConstraintLayout>