<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="12dp"
        android:src="@drawable/icon_back" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="12dp"
        android:visibility="gone"
        android:tint="@color/account_gray"
        app:srcCompat="@drawable/ic_close_black_24dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:text="@string/we_sent_you_a_code"
        />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textSize="12sp"
        android:textColor="@color/dark"
        android:text="@string/enter_it_blow_to_verify_number"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />

    <com.africa.news.widget.SmsInputView
        android:id="@+id/sms"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/title2"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:box_color="#9ca0ab"
        app:box_color_fill="#ff3a4f"
        app:box_count="6"
        app:radius="3dp"
        app:text_color="#1b1e25"/>


    <com.africa.news.widget.CountdownButton
        android:id="@+id/resend"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/sms"
        android:layout_marginTop="27dp"/>
    <TextView
        android:id="@+id/left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="10sp"
        android:layout_below="@id/resend"
        android:textColor="@color/blue_grey"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/you_have_d_left_to_request_another_one"
        />
    <com.africa.news.widget.ProgressButton
        android:id="@+id/call"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
