<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="12dp"
             android:background="@color/white">

    <FrameLayout
        android:id="@+id/iv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/push_image"
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/notification_fg"/>
    </FrameLayout>

    <TextView
        android:id="@+id/push_content"
        android:layout_below="@id/iv_container"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@id/iv_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="#1b1e25"
        android:textSize="12sp"
        android:text=""/>


</RelativeLayout>