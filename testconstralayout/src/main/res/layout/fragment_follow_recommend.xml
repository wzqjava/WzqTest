<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.africa.news.fragment.FollowRecommendFragment">

    <com.africa.news.widget.CustomScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                style="@style/FontStyleNormal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="0sp"
                android:text="@string/recommended"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Recommended" />


            <TextView
                android:id="@+id/tv_recommend_more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                style="@style/FontStyleNormal"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:text="@string/more"
                android:textColor="@color/dark"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBaseline_toBaselineOf="@id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="more" />


            <com.africa.news.widget.FollowListRecyclerView
                android:id="@+id/ry_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:listitem="@layout/item_follow_card" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                style="@style/FontStyleNormal"
                android:lineSpacingExtra="0sp"
                android:text="@string/popular_on_more"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ry_recommend"
                tools:text="Popular on More" />

            <TextView
                android:id="@+id/tv_popular_more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                style="@style/FontStyleNormal"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:text="@string/more"
                android:textColor="@color/dark"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBaseline_toBaselineOf="@id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="more" />


            <com.africa.news.widget.FollowListRecyclerView
                android:id="@+id/ry_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:listitem="@layout/item_follow_card" />

            <TextView
                android:id="@+id/tv_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                style="@style/FontStyleNormal"
                android:lineSpacingExtra="0sp"
                android:text="@string/browse_categories"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ry_popular"
                tools:text="Browse Categories" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ry_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:clipChildren="true"
                android:orientation="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_categories"
                tools:listitem="@layout/item_follow_browse_categories" />

            <android.support.constraint.Group
                android:id="@+id/group_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:constraint_referenced_ids="textView,tv_recommend_more,ry_recommend" />

            <android.support.constraint.Group
                android:id="@+id/group_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:constraint_referenced_ids="textView3,tv_popular_more,ry_popular" />


            <android.support.constraint.Group
                android:id="@+id/group_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="ry_categories,tv_categories" />


        </android.support.constraint.ConstraintLayout>


    </com.africa.news.widget.CustomScrollView>


    <com.africa.news.widget.LoadingViewNew
        android:id="@+id/loading_view_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </com.africa.news.widget.LoadingViewNew>

    <TextView
        android:id="@+id/tv_start_reading"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_dark_rect"
        style="@style/FontStyleNormal"
        android:gravity="center"
        android:lineSpacingExtra="0sp"
        android:text="@string/start_reading"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:translationY="80dp"
        android:textStyle="bold"
        tools:text="Start Reading" />


</FrameLayout>
