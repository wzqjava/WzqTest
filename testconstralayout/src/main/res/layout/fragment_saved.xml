<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/no_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/login_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_to_check_saved_content"
            android:textColor="#9ca0ab"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/no_login_img"
            android:layout_width="224dp"
            android:layout_height="168dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/register_or_login_hint" />

        <TextView
            android:id="@+id/regiter_or_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/bg_stroke_grey_23"
            android:gravity="center"
            android:minWidth="160dp"
            android:minHeight="46dp"
            android:text="@string/reg_or_login"
            android:textColor="#353a45"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/save_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/operation_container" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/operation_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        tools:visibility="visible"
        android:visibility="gone">

        <View
            android:id="@+id/anchor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaecef"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/save_select" />

        <TextView
            android:id="@+id/save_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="@string/select_all"
            android:textColor="#353a45"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/save_delete"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:background="#f2f3f5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/save_select"
            app:layout_constraintTop_toBottomOf="@id/anchor"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/save_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#ff3a4f"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/save_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <com.africa.news.widget.LoadingView
        android:id="@+id/saved_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" />

</RelativeLayout>