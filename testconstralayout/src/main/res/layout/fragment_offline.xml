<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/offline_tab"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            app:tabBackground="?attr/selectableItemBackground"
            app:tabIndicatorColor="#ff3a4f"
            app:tabIndicatorFullWidth="false"
            app:tabPaddingEnd="16dp"
            app:tabPaddingStart="16dp"
            app:tabSelectedTextColor="#ff3a4f"
            app:tabTextAppearance="@style/tab_style"
            app:tabTextColor="#9ca0ab" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl"
        android:background="#eaecef" />

    <com.africa.news.rtlviewpager.RtlViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_line" />
</RelativeLayout>
