<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/write_btn"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="2"
        android:background="@drawable/shape_comment"
        style="@style/FontStyleNormal"
        android:gravity="center|start"
        android:lineSpacingExtra="0sp"
        android:paddingStart="10dp"
        android:paddingEnd="19dp"
        android:singleLine="true"
        android:text="@string/comment"
        android:textColor="#9ca0ab"
        android:textSize="14sp"
        android:textStyle="normal" />

    <FrameLayout
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/comment_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_news_comment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.like.LikeButton
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:anim_scale_factor="2"
                    app:circle_end_color="@color/pink"
                    app:circle_start_color="#f9949b"
                    app:dots_primary_color="@color/pink"
                    app:dots_secondary_color="#f9949b"
                    app:icon_size="24dp"
                    app:icon_type="heart"
                    app:is_enabled="true"
                    app:liked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_news_save" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_news_share" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_bg_comments_count"
            android:ellipsize="end"
            style="@style/FontStyleMedium"
            android:gravity="center_horizontal"
            android:maxLines="12"
            android:minWidth="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="1.3k"
            tools:visibility="visible" />

    </FrameLayout>


</LinearLayout>