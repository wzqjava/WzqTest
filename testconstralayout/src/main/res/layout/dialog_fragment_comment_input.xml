<?xml version="1.0" encoding="utf-8"?>
<com.africa.news.comment.ResizeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.africa.news.widget.emojicon.EmojiconEditText
                android:id="@+id/input_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="38dp"
                android:background="@null"
                android:layout_marginTop="15dp"
                style="@style/FontStyleNormal"
                android:hint="@string/write_comment"
                android:maxLines="3"
                android:gravity="start|top"
                android:textColor="#353a45"
                android:paddingStart="17dp"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/icon_emoji"
                android:layout_width="36dp"
                android:scaleType="fitXY"
                android:layout_height="36dp"
                android:padding="4dp"
                android:layout_below="@id/input_comment"
                android:layout_marginTop="5dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/icon_emoji" />
            <TextView
                android:layout_alignTop="@id/icon_emoji"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_bg_send"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:id="@+id/send_btn"
                android:textSize="12sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/send"
                android:layout_marginEnd="12dp"
                style="@style/FontStyleNormal"
                android:textStyle="bold"
                android:maxLength="10"
                android:textColor="@color/white"
                android:gravity="center"
                tools:text="Send"
                />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="16dp"
                android:layout_alignTop="@id/icon_emoji"
                android:layout_marginEnd="34dp"
                android:visibility="gone"
                android:indeterminate="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/input_count"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="12sp"
                style="@style/FontStyleNormal"
                android:textStyle="normal"
                android:textColor="#9ca0ab"
                tools:text="261/280"
                android:gravity="center"
                android:layout_alignTop="@id/send_btn"
                android:layout_toStartOf="@id/send_btn"
                android:layout_marginEnd="12dp"
                />
        </RelativeLayout>
        <com.africa.news.widget.emojicon.EmojiSelectLayout
            android:id="@+id/emoji_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone" />
    </LinearLayout>
</com.africa.news.comment.ResizeRelativeLayout>