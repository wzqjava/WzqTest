<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_grey">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        style="@style/FontStyleNormal"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0sp"
        android:text="@string/recommended_for_you"
        android:textColor="@color/dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Recommended for you" />

    <TextView
        android:id="@+id/tv_recommend_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FontStyleNormal"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0sp"
        android:paddingTop="5dp"
        android:paddingBottom="7dp"
        android:text="@string/more"
        android:textColor="@color/charcoal_grey"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBaseline_toBaselineOf="@id/textView"
        app:layout_constraintEnd_toStartOf="@id/arrow" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recommend_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_recommend_more"
        app:srcCompat="@drawable/ic_arrow" />

    <com.africa.news.widget.FollowListRecyclerView
        android:id="@+id/ry_recommend"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:listitem="@layout/item_follow_card" />


</android.support.constraint.ConstraintLayout>
