<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/saved_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:button="@drawable/ic_save_check_toggle"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:textColor="#1b1e25"
        android:textSize="16sp"
        style="@style/FontStyleMedium"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/saved_check"
        app:layout_constraintEnd_toStartOf="@id/right_gap"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Zidane Wants Chesea Job, But Only On THe Three Conditions" />

    <LinearLayout
        android:id="@+id/pic_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        app:layout_goneMarginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/saved_check"
        app:layout_constraintEnd_toStartOf="@id/right_gap"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <com.africa.news.widget.CircleImageView
            android:id="@+id/image_1"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            app:circle_image_type="round" />

        <com.africa.news.widget.CircleImageView
            android:id="@+id/image_2"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            app:circle_image_type="round" />

        <com.africa.news.widget.CircleImageView
            android:id="@+id/image_3"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            app:circle_image_type="round" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/news_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/saved_check"
        app:layout_constraintTop_toBottomOf="@+id/pic_list">

        <com.africa.news.widget.CircleImageView
            android:id="@+id/logo_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@id/source"
            android:visibility="visible" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/logo_img"
            android:layout_marginStart="4dp"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:textColor="#9ca0ab"
            android:textSize="12sp"
            tools:text="OperatnOperatnOpratsdadsadadadasdadsada" />

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/source"
            android:textColor="#9ca0ab"
            tools:text="just now" />

        <ImageView
            android:id="@+id/comment_pic"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/source"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/publish_time"
            app:srcCompat="@drawable/ic_comment_icon" />

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/comment_pic"
            android:textColor="#9ca0ab"
            tools:text="1.1k" />

        <ImageView
            android:id="@+id/not_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:tint="#dcdee5"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_white_24dp" />

    </RelativeLayout>

    <View
        android:id="@+id/right_gap"
        android:layout_width="16dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/anchor" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:background="#f2f3f5"
        app:layout_constraintTop_toBottomOf="@+id/news_info" />

</android.support.constraint.ConstraintLayout>