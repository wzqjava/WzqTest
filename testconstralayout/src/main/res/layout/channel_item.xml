<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chosen_channel"
        android:layout_width="3dp"
        android:layout_height="16dp"
        android:background="#353a45"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/remove_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        app:srcCompat="@drawable/ic_channel_delete" />

    <TextView
        android:id="@+id/channel_name"
        android:layout_toEndOf="@+id/remove_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        tools:text="For you"
        android:textSize="15sp"
        android:textColor="#1b1e25" />

    <ImageView
        android:id="@+id/new_sign"
        android:visibility="gone"
        android:layout_width="21dp"
        android:layout_height="11dp"
        android:layout_toEndOf="@+id/channel_name"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:src="@drawable/label_new"/>

    <ImageView
        android:id="@+id/add_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_tab_adjust_channel"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:background="#f2f3f5"/>


</RelativeLayout>