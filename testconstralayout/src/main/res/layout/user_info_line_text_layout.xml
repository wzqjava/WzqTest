<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_line"
        android:layout_marginStart="22dp"
        style="@style/FontStyleNormal"
        android:gravity="center_vertical"
        android:textColor="#262626"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="First Name"/>

    <TextView
        android:id="@+id/left_hint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/left_text"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        android:textStyle="italic"
        android:visibility="gone"
        tools:text="Verified"/>

    <TextView
        android:id="@+id/right_text"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        style="@style/FontStyleNormal"
        android:gravity="center_vertical|end"
        android:textAlignment="viewEnd"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColor="#9ca0ab"
        android:text="@string/edit"
        android:textSize="14sp"
        tools:text="Fsdfadfadfadfgadfadf@163.com"
        android:textStyle="normal"/>

    <View
        android:id="@+id/diver_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="70dp"
        android:background="@color/scroll_bar"/>
</RelativeLayout>