<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="12dp"
        android:src="@drawable/icon_back" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="12dp"
        android:tint="@color/account_gray"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/create_an_account_with_your_mobile_number"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.africa.news.widget.ProgressButton
        android:id="@+id/next"
        android:layout_width="92dp"
        android:layout_height="46dp"
        android:layout_below="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp" />

    <FrameLayout
        android:id="@+id/mobile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@id/next">

        <TextView
            android:id="@+id/prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            tools:text="+234" />

        <com.africa.news.widget.ClearEditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_bg"
            android:digits="0123456789"
            android:gravity="center_vertical|start"
            android:hint="@string/mobile_number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="@integer/mobile_max_length"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:paddingEnd="11dp"
            android:textAlignment="viewStart"
            android:textColor="#1b1e25"
            android:textColorHint="#bbbbbb"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textDirection="locale"
            android:textSize="14sp"
            tools:text="1938749383" />

    </FrameLayout>

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/ErrorTextView" />


</RelativeLayout>
