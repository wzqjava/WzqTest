<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btnSendToWorkUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主线发子线"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="205dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="168dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSendToWorkUI" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="子线程发主线程"
        app:layout_constraintStart_toEndOf="@+id/btnSendToWorkUI"
        app:layout_constraintTop_toTopOf="@+id/btnSendToWorkUI" />


</androidx.constraintlayout.widget.ConstraintLayout>