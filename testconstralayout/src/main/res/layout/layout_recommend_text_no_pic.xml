<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/recommended_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/recommended_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/recommended_read"
            android:textColor="#353a45"
            android:textSize="16sp"
            style="@style/FontStyleNormal"
            android:textStyle="bold"
            android:lineSpacingExtra="0sp"
            tools:text="Recommended Read"
            />

        <View
            android:id="@+id/highlight_view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/recommended_title_name"
            android:layout_alignBottom="@id/recommended_title_name"
            android:background="#353a45" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:layout_below="@id/recommended_title_container"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default" />
    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommended_title_container"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        style="@style/FontStyleMedium"
        android:lineSpacingExtra="2sp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#1b1e25"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="The three Options \ Ka.a(23): Unable to build selector: /storage/emulatepolitics -Prof.Manyora" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:layout_below="@id/recommend_title"
        android:layout_marginTop="12dp"
        android:background="#f6f7fa" />
</RelativeLayout>