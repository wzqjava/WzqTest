<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.africa.news.fragment.NewsFragment">

    <com.africa.news.widget.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="36dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_indicator_color="@color/lightish_red"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin="0dp"
        app:tl_title_selected_color="@color/charcoal_grey"
        app:tl_title_text_size="13sp"
        app:tl_title_unselected_color="@color/blue_grey" />

    <ImageView
        android:id="@+id/tab_settings"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:paddingTop="11dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tab_adjust"
        tools:ignore="ContentDescription" />


    <com.africa.news.rtlviewpager.RtlViewPager
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout">

    </com.africa.news.rtlviewpager.RtlViewPager>

    <ImageView
        android:id="@+id/iv_tablayout_bg"
        android:layout_width="30dp"
        android:layout_height="42dp"
        android:src="@drawable/bg_channel_edit"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
        app:layout_constraintEnd_toEndOf="@id/tabLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

</android.support.constraint.ConstraintLayout>
