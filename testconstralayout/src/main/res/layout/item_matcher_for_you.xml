<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_more"
        app:srcCompat="@drawable/ic_arrow_right_12dp" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="9dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:text="@string/more"
        android:textColor="@color/charcoal_grey"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView2"
        app:layout_constraintEnd_toStartOf="@id/arrow" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/matches_for_you"
        android:textColor="#8f96a7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_league"
        style="@style/FontStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bluey_grey"
        android:textSize="9sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/iv_away"
        app:layout_constraintStart_toEndOf="@+id/iv_home"
        app:layout_constraintTop_toTopOf="@+id/iv_home"
        tools:text="Premier League" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/FontStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/bluey_grey"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_home"
        app:layout_constraintEnd_toEndOf="@+id/follow"
        app:layout_constraintStart_toStartOf="@+id/follow"
        tools:text="03:00" />

    <TextView
        android:id="@+id/tv_home"
        style="@style/FontStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:maxWidth="120dp"
        android:singleLine="true"
        android:textColor="@color/dark"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_home"
        app:layout_constraintStart_toStartOf="@+id/iv_home"
        app:layout_constraintTop_toBottomOf="@+id/iv_home"
        tools:text="NewcastleNewcastleNewcastleNewcastleNewcastle " />

    <TextView
        android:id="@+id/tv_away"
        style="@style/FontStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:maxWidth="120dp"
        android:singleLine="true"
        android:textColor="@color/dark"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/iv_away"
        app:layout_constraintStart_toStartOf="@+id/iv_away"
        app:layout_constraintTop_toBottomOf="@+id/iv_away"
        tools:text="Newcastle " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/pale_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="122dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_home"

        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:srcCompat="@drawable/app_icon" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_away"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_home"
        app:srcCompat="@drawable/app_icon" />

    <com.africa.news.football.widget.SubscribeButton
        android:id="@+id/follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_league"
        app:layout_constraintStart_toStartOf="@+id/tv_league"
        app:layout_constraintTop_toBottomOf="@+id/tv_league" />

</android.support.constraint.ConstraintLayout>
