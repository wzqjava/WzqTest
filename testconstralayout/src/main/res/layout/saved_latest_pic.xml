<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="11dp">

    <CheckBox
        android:id="@+id/saved_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:button="@drawable/ic_save_check_toggle"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/right_gap"
        android:layout_toEndOf="@id/saved_check">

        <com.africa.news.widget.AspectRatioFrameLayout
            android:id="@+id/pic_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.africa.news.widget.CircleImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_latest_news"
                app:circle_image_type="round" />

            <com.africa.news.widget.CircleImageView
                android:id="@+id/float_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33ffffff" />
        </com.africa.news.widget.AspectRatioFrameLayout>

        <RelativeLayout
            android:id="@+id/top_layout_container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/latest_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/hot" />

            <TextView
                android:id="@+id/latest_news_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/latest_icon_1"
                style="@style/FontStyleNormal"
                android:text="@string/latest_news"
                android:textColor="#8f96a7"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/title_1"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/latest_news_1"
                android:layout_alignStart="@id/latest_icon_1"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                style="@style/FontStyleMedium"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="What will happen When Robert Mueller Submit His Report To AG Ba…" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/top_layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/latest_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hot"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/latest_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                style="@style/FontStyleNormal"
                android:text="@string/latest_news"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toRightOf="@id/latest_icon"
                app:layout_constraintTop_toTopOf="@id/latest_icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:shadowColor="#80000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffff"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/latest_icon"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="What will happen When Robert Mueller Submit His Report To AG Ba…" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <include
        android:id="@+id/publish_container"
        layout="@layout/layout_news_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_container"
        android:layout_alignStart="@id/top_container"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/right_gap" />

    <ImageView
        android:id="@+id/not_interest"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/top_container"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:srcCompat="@drawable/close" />

    <View
        android:id="@+id/base_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/publish_container"
        android:layout_alignStart="@id/publish_container"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/right_gap"
        android:background="#f2f3f5" />

    <View
        android:id="@+id/right_gap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>