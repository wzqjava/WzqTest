<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <CheckBox
        android:id="@+id/saved_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:button="@drawable/ic_save_check_toggle"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <com.news.player.widget.BaseVideoView
        android:id="@+id/list_video_item"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/right_gap"
        android:layout_toEndOf="@id/saved_check"
        app:controller_layout_id="@layout/layout_video_saved_control"
        app:player_error_layout_id="@layout/layout_video_error"
        app:player_in_list_flag="true"
        app:player_playing_hint_layout_id="@layout/layout_video_bottom_playing_hint"
        app:player_loading_layout_id="@layout/layout_video_loading"
        app:player_preview_layout_id="@layout/layout_video_preview_saved_list"
        app:player_replay_layout_id="@layout/layout_video_replay"
        app:player_top_hint_layout_id="@layout/layout_video_top" />


    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_video_item"
        android:layout_toEndOf="@id/saved_check"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/no_pic_duration"
            android:ellipsize="end"
            style="@style/FontStyleMedium"
            android:gravity="start|top"
            android:maxLines="2"
            android:lineSpacingExtra="4sp"
            android:textAlignment="viewStart"
            android:textColor="#1b1e25"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Demo video titled" />

        <TextView
            android:id="@+id/no_pic_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#1b1e25"
            android:textSize="10sp"
            tools:text="1:34" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/author_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/title_container"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/right_gap"
        android:layout_toEndOf="@id/saved_check"
        android:orientation="horizontal">

        <com.africa.news.widget.CircleImageView
            android:id="@+id/publisher_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            app:circle_image_type="round" />

        <TextView
            android:id="@+id/video_publisher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="140dp"
            android:gravity="start|center_vertical"
            android:textColor="#9ca0ab"
            android:textSize="14sp"
            tools:text="HSSDD" />

        <com.like.LikeButton
            android:id="@+id/saved_video_like"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            app:anim_scale_factor="2"
            android:layout_marginStart="12dp"
            app:circle_end_color="@color/pink"
            app:circle_start_color="#f9949b"
            app:dots_primary_color="@color/pink"
            app:dots_secondary_color="#f9949b"
            app:icon_size="16dp"
            android:visibility="gone"
            app:icon_type="heart"
            app:is_enabled="false"
            app:liked="false" />

        <TextView
            android:id="@+id/video_favor_cnt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:drawablePadding="6dp"
            android:layout_marginStart="6dp"
            android:drawableTint="#9ca0ab"
            android:gravity="center"
            android:textColor="#9ca0ab"
            android:textSize="14sp"
            tools:text="33" />

        <TextView
            android:id="@+id/video_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:drawablePadding="6dp"
            android:drawableTint="#9ca0ab"
            android:gravity="center_vertical"
            android:textColor="#9ca0ab"
            android:textSize="14sp"
            tools:text="12" />

        <TextView
            android:id="@+id/video_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:drawablePadding="6dp"
            android:drawableTint="#9ca0ab"
            android:gravity="center"
            android:textColor="#9ca0ab"
            android:textSize="14sp"
            tools:text="4" />

    </LinearLayout>

    <View
        android:id="@+id/right_gap"
        android:layout_width="18dp"
        android:layout_height="1dp"
        android:layout_toStartOf="@id/anchor" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/author_container"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#f6f7fa" />

</RelativeLayout>